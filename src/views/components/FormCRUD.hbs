{{#if celular._id}}
        
<form action="/celCrud/editar/{{celular._id}}" method="post" class="p-3 w-50 mx-auto">
<div class="mb-2">
<input value="{{celular.marca}}" type="text"  class="form-control" name="marca" id="marca" placeholder="marca">
</div>
<div class="mb-2">
<input value="{{celular.modelo}}" type="text"  class="form-control" name="modelo" id="modelo" placeholder="modelo">
</div>
<div class="mb-2">
<input value="{{celular.precio}}" type="number"  class="form-control" name="precio" id="precio" placeholder="precio">
</div>
<div class="mb-2">
<input value="{{celular.urlImg}}" type="text"  class="form-control" name="urlImg" id="urlImg" placeholder="url Img">
</div>

<button type="submit" class="btn btn-secondary w-100">EDITAR</button>
</form> 

